<resources>
    <!-- Base application theme. -->
    <style name="Theme.TodoListYandexSchool" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/primaryBackColor</item>
        <item name="android:windowBackground">?attr/primaryBackColor</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="separatorSupportColor">@color/separator_light</item>
        <item name="overlaySupportColor">@color/overlay_light</item>
        <item name="primaryLabelColor">@color/black</item>
        <item name="secondaryLabelColor">@color/label_secondary_light</item>
        <item name="tertiaryLabelColor">@color/label_tertiary_light</item>
        <item name="disableLabelColor">@color/label_disable_light</item>
        <item name="redColor">@color/red_light</item>
        <item name="greenColor">@color/green_light</item>
        <item name="blueColor">@color/blue_light</item>
        <item name="grayColor">@color/gray_light</item>
        <item name="lightGrayColor">@color/l_gray_light</item>
        <item name="whiteColor">@color/white</item>
        <item name="primaryBackColor">@color/white</item>
        <item name="secondaryBackColor">@color/white</item>
        <item name="elevatedBackColor">@color/white</item>
    </style>

    <style name="Theme.TodoListYandexSchool.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TodoListYandexSchool.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.TodoListYandexSchool.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>